<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="main.java.hello.Person" table="person1">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="increment"/>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="addr" column="addr" type="string"/>
      <property name="age" column="age" type="string"/>
      <property name="mob" column="mob" type="string"/>
      <property name="dob" column="dob" type="string"/>
   </class>
</hibernate-mapping>